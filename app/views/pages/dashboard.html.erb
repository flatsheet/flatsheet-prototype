<div id="main"></div>

<script id="sheet-list-item-template" type="text/template">
  <div class="list-item">
    <h2 class="name"><a href="/sheet/{{= sheet.slug }}">{{= sheet.name }}</a></h2>
    <div class="description">
      {{= sheet.description }} 
      <a href="/api/v1/sheets/{{= sheet.slug }}" class="endpoint button" target="_blank">API endpoint.</a>
    </div>
  </div>
</script>

<script id="import-form-template" type="text/template">
  <div class="import-form">
    <h3>Import a csv or json file to start a sheet</h3>
    <%= form_tag import_file_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <i class="fa fa-upload"></i> Import
      <% end %>
    <% end %>
  </div>
</script>